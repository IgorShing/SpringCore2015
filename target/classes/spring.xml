<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="client" class="com.epam.spring.Client">
		<constructor-arg value="1"/>
		<constructor-arg value="John Smith"/>
	</bean>
	
	<bean id="consoleEventLogger" class="com.epam.spring.ConsoleEventLogger" />
	
	<!-- Bean for logger to file -->
	<bean id="fileEventLogger" class="com.epam.spring.FileEventLogger" init-method = "init">
		<constructor-arg value="logs.txt"/>
	</bean> 
	
	<bean id="cacheFileEventLogger" class="com.epam.spring.CacheFileEventLogger" 
		      init-method = "init" destroy-method = "destroy">
		<constructor-arg value="logs.txt"/>
	</bean> 
	

	<bean id="event" class="com.epam.spring.Event" scope="prototype">
		<constructor-arg>
			<bean class="java.util.Date"/>
		</constructor-arg>
		
		<constructor-arg index= "1" ref="dateFormat"/>
		<constructor-arg value=""/>
	</bean>
	
	<bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
	
	<bean id="app" class="com.epam.spring.App">
		<constructor-arg ref="client"/>
		<!-- <constructor-arg ref="consoleEventLogger"/> -->
	    <!-- <constructor-arg ref="fileEventLogger"/> -->
	    <constructor-arg ref="cacheFileEventLogger"/>
	
	
	</bean>

</beans>